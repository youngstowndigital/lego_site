<h1>Edit Lego Set</h1>
<%= form_with(model: @set, scope: :set, url: set_path(@set), data: { turbo: false }) do |f| %>
    <ul>
        <% @set.errors.full_messages.each do |err| %>
            <li><%= err %></li>
        <% end %>
    </ul>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :item_number, class: "form-label" %>
    <%= f.text_field :item_number, class: "form-control" %>

    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>

    <br />
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", set_path(@set), class: "btn btn-danger" %>
<% end %>
