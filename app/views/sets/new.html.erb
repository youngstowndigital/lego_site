<h1>New Lego Set</h1>
<%= form_with(scope: :set, url: sets_path, data: { turbo: false }) do |f| %>
    <ul>
        <% @set.errors.full_messages.each do |err| %>
            <li><%= err %></li>
        <% end %>
    </ul>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :item_number %>
    <%= f.text_field :item_number %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Save" %>
<% end %>
